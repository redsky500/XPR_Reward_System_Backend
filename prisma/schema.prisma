generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model TokenReward {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  walletAddress String   @unique
  tokenAmount   String
  registeredAt  DateTime @default(now())
}

model XRPReward {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  walletAddress String   @unique
  tokenAmount   String
  registeredAt  DateTime @default(now())
}

model OPLReward {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  walletAddress String   @unique
  registeredAt  DateTime @default(now())
}

model SocietyReward {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  walletAddress String   @unique
  tokenAmount   String
  registeredAt  DateTime @default(now())
}
